        <div class="container">
          <div class="row align-items-center">
            <div class="col-12">
              <div class="row align-items-center">
                <div class="col-lg-6 mb-4">
		  <img src="/images/artwork/password.svg" style="width: 320px; height: 320px; display: block; margin-left: auto; margin-right: auto;">
		</div>
		<div class="col-lg-5 ml-auto">
    <form action="/register/forgot_password/setnew.php" method="POST" class="form-box" autocomplete="off">
		    <h3 class="h4 text-black mb-4">
<?php
    if($permission) {
        echo 'New Password!';
    } else {
        echo 'Error!';
    }
?>
</h3>
		    <p style="color:black">Enter your new password below.</p>
    <div class="form-group">
    <input type="password" name="password" id="pswd1" class="form-control" placeholder="New Password" required autofocus>
    <p style="color:red;display:none;font-size:0.8rem;" id="weakPass">Strengthen it...</p>
    <p style="color:green;display:none;font-size:0.8rem;" id="strongPass">Acceptable!</p>
    </div>
    <div class="form-group">
    <input type="password" name="repeat" id="pswd2" class="form-control" placeholder="Repeat New Password" required>
    <p style="color:red;display:none;font-size:0.8rem;" id="noMatch">Passwords don't match!</p>
    </div>
    <input type="hidden" name="email" value="<?php echo $email ?>">
